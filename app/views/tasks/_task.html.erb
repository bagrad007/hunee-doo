<tbody>
  <tr>
    <td>
      <%= task.title %>
    </td>
    <td>
      <%= task.completed ? "" : "Not Done" %>
    </td>
    <td><%= link_to "Edit", edit_task_path(task), class: "btn btn-secondary" %></td>
    <td><%= button_to "Delete", task, method: :delete, class: "btn btn-danger" %></td>
  </tr>
</tbody>
